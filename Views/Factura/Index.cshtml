@model IEnumerable<prjMaestroDetalle.Models.Factura>

@{
    ViewData["Title"] = "Index";
}
<section class="contenedor">
    <h1>Facturas</h1>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Fecha)
                </th>
                <th>
                   Cliente
                </th>
                <th>
                    Condicion
                </th>
                <th>
                    No. articulos
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SubTotal)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Total)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Estado)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Fecha)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.cliente.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CondicionPago.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CantidadArticulo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SubTotal)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Total)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Estado.Nombre)
                </td>
                <td>
                    <a class="btn  bg-success text-white" asp-action="Details" asp-route-id="@item.Id">Ver detalle</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                </td>
            </tr>
    }
        </tbody>
    </table>
</section>
