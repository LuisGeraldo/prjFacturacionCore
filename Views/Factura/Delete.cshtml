@model prjMaestroDetalle.Models.Factura

@{
    ViewData["Title"] = "Delete";
}
<section class="contenedor">
    <h1>Eliminar</h1>

    <h3>Estas seguro que quieres eliminar esto?</h3>
    <div>
        <h4>Factura</h4>
        <hr />
        <dl class="row">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Fecha)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Fecha)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.cliente)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.cliente.Apellido)
            </dd class>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.CondicionPago)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.CondicionPago.Descripcion)
            </dd class>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.CantidadArticulo)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.CantidadArticulo)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.SubTotal)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.SubTotal)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Total)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Total)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Estado)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Estado.Descripcion)
            </dd class>
        </dl>
        
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Eliminar" class="btn btn-danger" /> |
            <a asp-action="Index">Volver a la lista</a>
        </form>
    </div>
</section>