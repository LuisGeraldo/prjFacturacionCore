@model prjMaestroDetalle.Models.Inventario

@{
    ViewData["Title"] = "Edit";
}
<section class="contenedor">
    <h1>Editar inventario</h1>

    <h4>Inventario</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />

                  <div class="form-group">
                    <label asp-for="IdArticulo" class="control-label">Articulo</label>
                    <select asp-for="IdArticulo" disabled="true" class="form-control" asp-items="ViewBag.IdArticulo"></select>
                    <span asp-validation-for="IdArticulo" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Existencia" class="control-label"></label>
                    <input asp-for="Existencia" class="form-control" />
                    <span asp-validation-for="Existencia" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PrecioCompra" class="control-label"></label>
                    <input asp-for="PrecioCompra" class="form-control" />
                    <span asp-validation-for="PrecioCompra" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PrecioVenta" class="control-label"></label>
                    <input asp-for="PrecioVenta" class="form-control" />
                    <span asp-validation-for="PrecioVenta" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ITBIs" class="control-label"></label>
                    <input asp-for="ITBIs" class="form-control" />
                    <span asp-validation-for="ITBIs" class="text-danger"></span>
                </div>
              
                <div class="form-group">
                    <input type="submit" value="Guardar" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Volver a la lista</a>
    </div>

</section>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
