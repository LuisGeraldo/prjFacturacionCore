@model prjMaestroDetalle.Models.Inventario

@{
    ViewData["Title"] = "Delete";
}

<section class="contenedor">
    <h1>Eliminar</h1>

    <h3>Estas seguro que quieres elminar esto?</h3>
    <div>
        <h4>Inventario</h4>
        <hr />
        <dl class="row">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Articulo)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Articulo.Nombre)
            </dd class>

            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Existencia)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Existencia)
            </dd>
            <dt class = "col-sm-2">
                Precio de compra
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.PrecioCompra)
            </dd>
            <dt class = "col-sm-2">
                Precio de venta
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.PrecioVenta)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.ITBIs)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.ITBIs)
            </dd>
        </dl>
        
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Eliminar" class="btn btn-danger" /> |
            <a asp-action="Index">Volver a la lista</a>
        </form>
    </div>
</section>